{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "reactcontexts": ["src/reactcontexts"],
      "cardbehaviour": ["src/cardbehaviour"],
      "behaviourcomponent": ["src/behaviourcomponent"],
      "userMessaging": ["src/userMessaging"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}